{
  "name": "platformsh-action",
  "description": "platform.sh action with deploy and clean environment feature",
  "author": "zeshanziya",
  "type": "module",
  "homepage": "https://github.com/axelerant/platformsh-action",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/axelerant/platformsh-action.git"
  },
  "bugs": {
    "url": "https://github.com/axelerant/platformsh-action/issues"
  },
  "keywords": [
    "platform.sh",
    "deploy"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "ci-test": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 jest",
    "coverage": "make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "biome format --write src",
    "format:check": "biome format src",
    "lint": "biome lint src",
    "local-action": "local-action . src/main.ts .env",
    "package": "npm run copy-extra && rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "package:watch": "npm run package -- --watch",
    "test": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 jest",
    "all": "npm run format:write && npm run lint && npm run test && npm run coverage && npm run package",
    "copy-extra": "cp known_hosts dist/ && cp -r scripts dist/"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^3.0.0",
    "@actions/exec": "^2.0.0",
    "@actions/github": "^9.0.0",
    "platformsh-client": "^0.2.40"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.2",
    "@github/local-action": "^7.0.0",
    "@jest/globals": "^30.2.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.13",
    "jest": "^30.2.0",
    "make-coverage-badge": "^1.2.0",
    "rollup": "^4.57.1",
    "ts-jest": "^29.4.6",
    "ts-jest-resolver": "^2.0.1",
    "typescript": "^5.9.3"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "*"
  }
}
